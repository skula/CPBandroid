    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:gravity="center_horizontal"
        android:text="Transmission"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:background="#333333"
            android:gravity="center_horizontal"
            android:text="Ip"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <EditText
            android:id="@+id/trans_ip"
            android:layout_width="300px"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:background="#333333"
            android:gravity="center_horizontal"
            android:text="Port"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <EditText
            android:id="@+id/trans_port"
            android:layout_width="300px"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"            
            android:layout_marginLeft="15px"
            android:background="#333333"
            android:gravity="center_horizontal"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="30px" />

        <EditText
            android:id="@+id/trans_login"
            android:layout_width="300px"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"            
            android:layout_marginLeft="15px"
            android:background="#333333"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="30px" 
            android:text="MdP"/>

        <EditText
            android:id="@+id/trans_pw"
            android:layout_width="300px"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:gravity="center_horizontal"
        android:text="Betaseries"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"            
            android:layout_marginLeft="15px"
            android:background="#333333"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="30px" 
            android:text="Login" />

        <EditText
            android:id="@+id/beta_login"
            android:layout_width="300px"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"            
            android:layout_marginLeft="15px"
            android:background="#333333"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="30px" 
            android:text="Mdp" />

        <EditText
            android:id="@+id/beta_pw"
            android:layout_width="300px"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="150px"
            android:layout_height="wrap_content"            
            android:layout_marginLeft="15px"
            android:background="#333333"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="30px" 
            android:text="ClÃ©" />

        <EditText
            android:id="@+id/beta_key"
            android:layout_width="300px"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_marginTop="10px"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#333333"
        android:textColor="#ffffff"
        android:text="Sauvegarder" />

